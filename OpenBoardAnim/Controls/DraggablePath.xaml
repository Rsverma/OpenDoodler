<UserControl x:Class="OpenBoardAnim.Controls.DraggablePath"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OpenBoardAnim.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Width="{Binding Width,Mode=TwoWay}" Height="{Binding Height,Mode=TwoWay}"
             
             MouseLeftButtonDown="Path_MouseLeftButtonDown" MouseLeftButtonUp="Path_MouseLeftButtonUp" MouseMove="Path_MouseMove">
    <Grid Background="Transparent">
        <Path Data="{Binding ImgGeometry}" Stretch="Fill" Stroke="Black"/>
    </Grid>
</UserControl>
